<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/etwo"
    tools:context="com.saahay.littlemillennium.AddAcademics">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:gravity="left"
            android:visibility="gone"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="Add Academics"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Batch"/>
        <Spinner
            android:id="@+id/spnBatch"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Division"/>
            <Spinner
                android:id="@+id/spnDivision"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Subject"/>
            <Spinner
                android:id="@+id/spnSubject"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>
        <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Lecture Type"/>
        <Spinner
            android:id="@+id/spnLectureType"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="left"
                android:text="Title"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edtSubject"
                android:background="@drawable/round_corners"
                android:layout_width="0dp"
                android:paddingLeft="4dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="0dp"
            android:text="Message"/>
        <EditText
            android:id="@+id/edtmessage"
            android:layout_marginTop="5dp"
            android:paddingLeft="4dp"
            android:background="@drawable/round_corners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChooseFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Choose File"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvChooseFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="No File Choose"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChooseFile2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Choose File"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvChooseFileName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="No File Choose"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChooseFile3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Choose File"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvChooseFileName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="No File Choose"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChooseFile4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Choose File"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvChooseFileName4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="No File Choose"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChooseFile5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Choose File"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvChooseFileName5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="No File Choose"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:text="Submit"/>
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="5"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:text="Cancel"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
